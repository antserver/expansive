{
    title: "Home page title",
    url: "https://embedthis.com",
    description: "Meta data description (optional)",
    keywords: "Meta data keywords (optional)",
    control: {
        copy:    [ 'images', 'lib', 'scripts' ],
        depends: { 'css/all.css.less': [ '*.less' ] },
        exclude: [ '*.inc.less' ],
        _files:   [
            '/tmp/def.txt',
            '/tmp/u',
        ],
        plugins: [ 'css', 'js', 'marked', 'test', /* 'gzip' */ ],
        sitemap: {
            //  MOB - should be standard array of glob patterns
            include: "/\\.html/"
        },
        pipeline: {
            'css=less':  [ 'compile-less', 'prefix-css', 'minify-css' ],
            'html=md':   [ 'compile-markdown' ],
            '*=bash':    [ 'shell' ],
            'js=js':     [ 'minify-js' ],
            'min.js=js': [ 'minify-js' ],
            '*=*':       [ 'compress' ],
        }
    },
    mode: 'debug',
    modes: {
        debug: {
            control: {
                transforms: {
                    'js -> js': {
                        mangle: false,
                        compress: false,
                    },
                    'css -> css': {
                        enable: true,
                        prefix: true,
                        minify: false,
                    }
                }
            }
        }
    }
}
